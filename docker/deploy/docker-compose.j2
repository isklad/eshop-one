# Manual changes in this file will be overwritten by deployment process

version: '3.8'

services:
  {{ DOCKER_SERVICE_NAME }}-php:
    image: {{ DOCKER_IMAGE_PHP }}
    container_name: {{ DOCKER_SERVICE_NAME }}-php
    restart: always
    networks:
      app-network:
        ipv4_address: {{ DOCKER_PHP_IP_ADDR }}
    logging:
      driver: json-file
      options:
        max-size: 5m
        max-file: '5'
    volumes:
      - /opt/docker-compose/persistent/{{ DOCKER_SERVICE_NAME }}/php-sessions:{{ ENV_PHP_INI_SESSION_SAVE_PATH }}
    {%- if docker_env_vars %}
    environment:
    {%- for env_var in docker_env_vars.split('\n') %}
      - {{ env_var }}
      {%- endfor %}
    {%- endif %}

  {{ DOCKER_SERVICE_NAME }}-nginx:
    image: {{ DOCKER_IMAGE_NGINX }}
    container_name: {{ DOCKER_SERVICE_NAME }}-nginx
    restart: always
    networks:
      app-network:
        ipv4_address: {{ DOCKER_NGINX_IP_ADDR }}
    logging:
      driver: json-file
      options:
        max-size: 5m
        max-file: '5'
    environment:
      - NGINX_STATUS_ALLOW=127.0.0.1
      - NGINX_FPM_STATUS_ALLOW=127.0.0.1
      - PHP_BACKEND_ADDR={{ PHP_BACKEND_ADDR }}

networks:
  app-network:
    external: true
